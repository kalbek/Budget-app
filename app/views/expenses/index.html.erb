
<!DOCTYPE html>
<html>
  <head>
    <title>Expense Transactions app</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <div class="flex-column-centered">
    <div class="transaction-list">
    

    <% @expenses.each do |expense| %>
      <%= link_to payments_path(id: expense.id), class: "transaction-name" do %>
      <div class="transaction-row flex-centered">
        <div class="flex-spaced">
          <div class="flex-spaced">
            <div class="transaction-name"><%= expense.name %></div>
            <div class="transaction-amount"><%= expense.icon %></div>
          </div>
        </div>
        <div class="transaction-created-at">
         
        
          <% sum = 0 %>
          <% count = 0 %>
           <% @payments.select { |payment| payment.transaction_id == expense.id }.each do |payment| %>
              <% sum += payment.amount %>
              <% count += 1 %>
          <% end %>
          <%= count %> Payments,
           Total $<%= sum %>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
  <%= link_to 'Add Expense Category', new_expense_path, class: 'add-items-button' %>
  </body>
  </div>

</html>
